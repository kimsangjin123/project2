<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.mock.dao.CmtDao">

   <select id="cmt_list" resultType="kr.co.mock.dto.CmtDto">
	 select * from comment order by c_id desc limit #{param1},10
  </select>

  <insert id="cmt_write_ok" parameterType="kr.co.mock.dto.CmtDto">
    insert into comment(userid,content,writeday)
    values(#{userid},#{content},now())
  </insert>
  
  <update id="cmt_update" parameterType="kr.co.mock.dto.CmtDto">
    update comment set userid=#{userid}, content=#{content} 
    where c_id=#{c_id} and f_id=#{f_id}
  </update>

  <delete id="cmt_delete">
     delete from comment where c_id=#{c_id} and f_id=#{f_id}
  </delete>
  
  <select id="get_pagecount" resultType="Integer">
    select ceil(count(*)/10) from comment;
  </select>

</mapper>
